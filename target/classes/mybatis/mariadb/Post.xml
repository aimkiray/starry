<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Post">

    <!--数据库和实体类的映射-->
    <resultMap type="Post" id="PostResult">
      <id column="post_id" property="postId"/>
      <result column="post_title" property="postTitle"/>
      <result column="post_status" property="postStatus"/>
      <result column="post_type" property="postType"/>
      <result column="post_content" property="postContent"/>
      <result column="post_mime_type" property="postMimeType"/>
      <association property="user" column="post_author" resultMap="AuthorResult"/>
    </resultMap>

    <resultMap type="Author" id="AuthorResult">
        <result column="author_id" property="authorId"/>
        <result column="author_name" property="authorName"/>
        <result column="author_password" property="authorPassword"/>
        <result column="author_info" property="authorInfo"/>
        <result column="author_date" property="authorDate"/>
    </resultMap>

    <!--获取全部的文章-->
    <select id="findAllPost" resultMap="PostResult">
        SELECT * FROM sinitial.sl_post LEFT JOIN sinitial.sl_author ON sinitial.sl_post.post_author = sinitial.sl_author.author_id
    </select>

    <!--根据id获得文章,sql语句中的参数可以随意-->
    <select id="findPostById" parameterType="int" resultMap="PostResult">
        SELECT * FROM sinitial.sl_post LEFT JOIN sinitial.sl_author ON sinitial.sl_post.post_author = sinitial.sl_author.author_id WHERE post_id = #{postId}
    </select>

    <!--根据文章名获得文章,sql语句中的参数可以随意，参数可小写，是mybatis中已定义的别名-->
    <select id="findPostByName" parameterType="string" resultMap="PostResult">
        SELECT * FROM sinitial.sl_post LEFT JOIN sinitial.sl_author ON sinitial.sl_post.post_author = sinitial.sl_author.author_id WHERE post_title LIKE concat('%',#{postTitle},'%')
    </select>

    <!--分页查询-->
    <select id="findPost" parameterType="map" resultMap="PostResult">
        SELECT * FROM sinitial.sl_post LEFT JOIN sinitial.sl_author ON sinitial.sl_post.post_author = sinitial.sl_author.author_id LIMIT #{start},#{limit}
    </select>

    <!--根据id删除文章-->
    <delete id="deletePostById" parameterType="int">
      DELETE FROM sl_post WHERE post_id = #{postId}
    </delete>

    <!--增加文章-->
    <insert id="insertPost" parameterType="Post">
      INSERT INTO sinitial.sl_post
      (post_title,
      post_author,
      post_content,
      post_date,
      post_mime_type,
      post_status,
      post_type)
      VALUES
      (#{postTitle},
      #{user.authorId},
      #{postContent},
      #{postDate},
      #{postMimeType},
      #{postStatus},
      #{postType})
    </insert>

    <!--修改文章信息-->
    <update id="updatePostId" parameterType="Post">
      UPDATE sl_post SET
      USER_NAME = #{postName},
      USER_PASSWORD = #{postPassword},
      REAL_NAME = #{realName},
      EMAIL = #{email},
      GENDER = #{gender},
      SIGN_DATE = #{signDate}
      WHERE
      USER_ID = #{postId}
    </update>
</mapper>
